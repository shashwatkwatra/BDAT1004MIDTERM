        "def tough(indentation, stars):\n",
        "    if stars == 0:\n",
        "        return\n",
        "    else:\n",
        "        tough(indentation, stars - 1)\n",
        "        print(' ' * indentation + '*' * stars)\n",
        "        if stars > 1:\n",
        "            tough(indentation + stars - 2, stars - 2)\n",
        "\n",
        "tough(0,4)"
      ]
